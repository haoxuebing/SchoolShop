    <script type="text/javascript">

        $(function () {
            $('#searchKeyWord').click(function () {
                var keyWord = $('#keyWordText').val();
                window.open("/Product/SearchProduct?keyWord=" + keyWord, "_self");
            })

            $('a[name="cancel"]').click(function () {
                var aid = $(this).attr("type_id");
                var pid = $(this).attr("type_pid");
                $.post("/User/CancelAttention", { aid: aid, pid: pid }, function (msg) {
                    if (msg == "ok") {
                        $("#li" + aid).remove();
                    }

                }, "text")

            })

        })


    </script>
